import Ember from 'ember';

export default Ember.Component.extend({
  selectable: function(){
    return this.get('square.state') == null;
  }.property('square.state'),

  actions: {
    select: function(){
      console.log('selecting..')
      this.set('square.state', this.get('currentPlayer.type'));
      this.get('currentPlayer').toggle();
    }
  }
});
