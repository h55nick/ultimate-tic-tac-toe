import Ember from 'ember';

export default Ember.Component.extend({
  currentPlayer: Ember.Object.create({
    id: '123',
    type: 'X',
    toggle: function(){
      this.get('type') == 'x' ? this.set('type', 'O') : this.set('type', 'X');
    }
  }),
  actions: {
    select: function(){
      debugger;
      this.set('square.state', this.get('currentPlayer.type'));
    }
  }
});
